LIBS = -lsdsl -ldivsufsort -ldivsufsort64
ifdef LONG
INTT = -DLONG
endif

ifdef OPENMP
PCC = g++
PCFLAGS = -fopenmp -mcx16 -O3 -DOPENMP -DMCX16 $(INTT)
PLFLAGS = -fopenmp

else ifdef GCILK
PCC = g++
PCFLAGS = -std=c++11 -I ~/include -O2 -lcilkrts -fcilkplus -mcx16  -DCILKP -DMCX16 $(INTT)
PLFLAGS = -L ~/lib -lcilkrts -fcilkplus

else ifdef CILK
PCC = cilk++
PCFLAGS = -O2 -DCILK -Wno-cilk-for $(INTT)
PLFLAGS = 

else ifdef MKLROOT
PCC = icpc
PCFLAGS = -O3 -DCILKP $(INTT)
PLFLAGS = 

else
PCC = g++
PLFLAGS = $(LFLAGS) -L ~/lib  
PCFLAGS = -g -std=c++11 -O2 -I ~/include $(INTT)
endif
