LIBS = -ldivsufsort -llibprange
ifdef LONG
INTT = -DLONG
endif

ifdef OPENMP
PCC = g++
PCFLAGS = -Wall -std=c++14 -fopenmp -mcx16 -O2 -DOPENMP -DMCX16 -I ~/include $(INTT)
PLFLAGS = -L ~/lib -fopenmp

else ifdef GCILK
PCC = g++
PCFLAGS = -std=c++14 -I ~/include -lcilkrts -fcilkplus -mcx16 -O2 -DCILKP -DMCX16 $(INTT)
PLFLAGS = -L ~/lib   -lcilkrts -fcilkplus

else ifdef CILK
PCC = cilk++
PCFLAGS = -std=c++14 -O2 -DCILK -Wno-cilk-for $(INTT)
PLFLAGS = 

else ifdef MKLROOT
PCC = icpc
PCFLAGS = -O2 -DCILKP $(INTT)
PLFLAGS = 

else
PCC = g++ 
PLFLAGS = -L ~/lib $(LFLAGS) 
PCFLAGS = -Wall -std=c++14 -O2 -I ~/include $(INTT)
endif
